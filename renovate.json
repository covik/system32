{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", "workarounds:typesNodeVersioning"],
  "ignorePaths": ["mysql.Dockerfile"],
  "postUpdateOptions": ["yarnDedupeHighest"],
  "timezone": "Europe/Zagreb",
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "dependencyDashboardApproval": true
    },
    {
      "matchManagers": ["npm"],
      "rangeStrategy": "pin"
    },
    {
      "matchPackagePatterns": ["^eslint"],
      "groupName": "eslint packages"
    },
    {
      "matchPackageNames": ["node", "@types/node"],
      "matchDepTypes": ["engines", "devDependencies", "final"],
      "matchManagers": ["npm", "dockerfile"],
      "groupName": "node-js"
    },
    {
      "matchPackageNames": ["pulumi/pulumi-base", "@pulumi/pulumi"],
      "groupName": "pulumi"
    },
    {
      "matchDepTypes": ["devDependencies", "engines", "final"],
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "schedule": ["after 3am on sunday"]
    }
  ]
}
